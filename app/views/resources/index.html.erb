<%= form_tag resources_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a resource"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<ul>
  <% @resources.each do |resource| %>
    <li><%= "#{resource.title} by #{resource.user.full_name}" %></li>
  <% end %>
</ul>
