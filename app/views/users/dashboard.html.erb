<div class="main-container">

  <div class="container-dashboard">

    <div class="m-5 wrapper-dashboard">

      <div class="header-dashboard">

        <div class="wrapper-header-title">
          <h5> Hello <%= current_user.full_name %>, welcome back!</h5>
        </div>

        <div class="wrapper-header-date">
          <h5> <%= image_tag("icon-date.svg", class: "m-1") %><%= @today %></h5>
        </div>

      </div>

      <div class="goal-section">
        <h3 class= "mb-4 mt-5">My goal</h3>

        <div class="p-3 info-card">
          <div class="p-2 icon-card">
            <%=image_tag("icon-goal.svg") %>
          </div>
          <div class="m-2 align-self-center text-card">
            <% unless @jobs.nil? %>
              <p><%= @goal.description %></p>
              <p> To reach my goal, I need to send <%= @goal.job_target %> applications a month!</p>
            <% else %>
              <p>You currently have not set a goal!</p>
            <% end %>
          </div>
        </div>

        <%= link_to 'Add a Goal', new_goal_path %>
        <% unless @jobs.nil? %>
          <%= link_to 'Edit your Goal', edit_goal_path(@goal) %>
        <% end %>
      </div>

      <div class="credit-section">
        <h3 class= "mb-4 mt-5">My credits</h3>

        <div class="p-3 info-card">
          <div class="p-2 icon-card">
            <%=image_tag("icon-credits.svg") %>
          </div>
          <div class="m-2 align-self-center text-card">
            <p> You have <%= pluralize(current_user.credits, 'credit')%> left </p>
            <%= link_to 'Share a resource to get more credits!', new_resource_path %>
          </div>
        </div>
      </div>

      <div class="job-preview-section">
        <h3 class= "mb-4 mt-4">My job applications</h3>
        <%= link_to 'View all', jobs_path %>
        <%= render 'shared/job_preview' %>
      </div>

      <div class='my-resources-section'>
        <h3 class= "mb-4 mt-4">My resources</h3>
        <%= render 'shared/resources' %>
      </div>

    </div>


    <%# KPIs SECTION %>

    <div class="wrapper-kpi">
      <h3 class="mt-5 pl-3"> My KPIs</h3>
      <%= render 'shared/kpi_card' %>
    </div>

  </div>

</div>
