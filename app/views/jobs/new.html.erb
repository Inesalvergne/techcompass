<% if current_user.goals.nil? %>
  <p>You currently have not set a goal! Set a goal first before adding a job application.</p>
  <%= link_to 'Add a Goal', new_goal_path %>
<% else %>
    <%= simple_form_for @job do |f| %>
    <%= f.input :company %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :role %>
    <%= f.input :level %>
    <%= f.input :post_url %>
    <%= f.input :interview_date %>
    <%= f.input :remote %>
    <%= f.input :status %>
    <%= f.submit "Add a Job", class: "btn btn-sm btn-primary" %>
    <% end %>
<% end %>
